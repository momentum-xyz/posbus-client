{
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "include": ["*.ts", "../dist/ts/*.ts"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "checkJs": false,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext"],
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
        "@momentum-xyz/posbus-client": ["../dist/ts/"]
    }
  }
}
