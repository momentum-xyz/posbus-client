{
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "include": ["**/*.ts"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "checkJs": false,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext", "WebWorker"],
    "ignoreDeprecations": "5.0"
  }
}
